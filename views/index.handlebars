<h2 class="secondary-header">From the click of a button to your screen!</h2>

<div class="menu-style">
    <h2>Add a burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="newBurgerInput">Burger Name:</label>
            <input type="text" id="newBurgerInput" name="name">
        </div>

        <button type="submit">Add burger</button>
    </form>
</div>

<div class="burger-views">
    <div class="menu-style burgers-to-devour-box">
        <h2>Burgers to Devour!</h2>
        <ul>
        {{#each burgers}} 
            {{#unless devoured}} 
                {{> burgers/burger-block devoured=true}} 
            {{/unless}} 
        {{/each}}
        </ul>
    </div>

    <div class="menu-style devoured-burders-box">
        <h2>Burgers that have been devoured!</h2>

        <ul>
            {{#each burgers}} 
                {{#if devoured}} 
                    {{> burgers/burger-block devoured=false}} 
                {{/if}} 
            {{/each}}
        </ul>
    </div>
</div>




